{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["DOM", "ES2021"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase"
        }
      }
    ],
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": ["./src/**/*"]
}
