// More info: https://aka.ms/tsconfig.json
// Reference: https://github.com/gatsbyjs/gatsby/blob/dc9cdfcfbd287428e1f5aebb35c592221e0b0224/examples/using-typescript/tsconfig.json
{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["DOM", "ES2021"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCase"
        }
      }
    ],
    "skipLibCheck": true
  }
}
